{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ESNext",
    "sourceMap": true,
    "lib": ["ESNext"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    ".env",
  ],
  "exclude": [
    "node_modules"
  ]
}